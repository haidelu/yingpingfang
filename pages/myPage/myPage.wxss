/* pages/myPage/myPage.wxss */
.userInfo{
  width:100%;
  height:350rpx;
  background-color:#41cc65; 
  display: flex;
  flex-direction:row;
  justify-content: center;
  align-items: flex-end;
}
.userInfo .box{
  margin-bottom:54rpx;
  display: flex;
  flex-direction: column;
  background-color:#41cc65; 
}
.userInfo .box::after{
  border:none;
}
.userInfo .box image{
  width:140rpx;
  height:140rpx;
  border-radius: 50%;
  background-color: white;
}
.userInfo .box text{
  text-align: center;
  color:white;
  font-size: 36rpx
}
.myCom,.about{
  width:100%;
  margin-top:40rpx;
  padding-left: 20rpx;
}
.myCom text,.about text{
  display: block;
  padding-left: 30rpx;
  width:90%;
  height:86rpx;
  font-size:30rpx;
  color: #111;
  border-bottom:1px solid #bbc;
  line-height: 100rpx;
}
.about{
  margin-top: 40rpx;
}